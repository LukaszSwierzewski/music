<% include partials/header.ejs %>



<div class="container">
        <div class="jumbotron">
                <h2><i class="far fa-image fa-1x"></i>Witaj na musicBook</h2>
                <p>Wybierz swoje ulubione płyty, artystów, co tam chcesz i porównaj sobie z innymi. A ten tekst napisałem zeby coś sprawdzić więc nie ma sensu</p>
               <a class="btn btn-primary btn-large" href="/index/new">Dodaj nową płyte</a> 
                    <p>
                        <form action='/record' method='get' class='form-inline'>
                            <div class='form-group'>
                                <input type='text' name='search' placeholder='Przeszukaj' class='form-control'>
                                <input type='submit' value='szukaj' class='btn btn-default'>
                                <input href='/record' type='submit' value='Powrót' class='btn btn-default'>
                            </div>
                        </form>
                    </p>
              </div>
 

<div class="row text-center">

<% oneRecord.forEach(function(plyta) {%>
<a href="/index/<%= plyta._id %>" class="ui inverted big violet button">
       <div class="col-md-4 col-sm-6 zoom">
          
           <div class='thumbnail'> 
               
               <img id='rownyH' src="<%= plyta.image %>">
    <h4> <%= plyta.name %> </h4>
    <p> <%= plyta.opis %> </p>

    </a>

</div> <!-- col -->
</div>
<% }); %>
</div>
<div class="row text-center">
    <% if (pages && pages > 0) { %>
    <ul class="pagination text-center">
        <% if (current == 1) { %>
        <li class="disabled"><a>First</a></li>
        <% } else { %>
        <li><a href="/record<%if(search){%>?search=<%=search%><%}%>">First</a></li>
        <% } %>
 
        <% if (current == 1) { %>
        <li class="disabled"><a>«</a></li>
        <% } else { %>
        <li><a href="/record?page=<%= Number(current) - 1 %><%if(search){%>&search=<%=search%><%}%>">«</a></li>
        <% } %>
 
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
        <li class="disabled"><a>...</a></li>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
        <li class="active"><a><%= i %></a></li>
        <% } else { %>
        <li><a href="/record?page=<%= i %><%if(search){%>&search=<%=search%><%}%>"><%= i %></a></li>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
        <li class="disabled"><a>...</a></li>
        <% } %>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="disabled"><a>»</a></li>
        <% } else { %>
        <li><a href="/record?page=<%= Number(current) + 1 %><%if(search){%>&search=<%=search%><%}%>">»</a></li>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="disabled"><a>Last</a></li>
        <% } else { %>
        <li><a href="/record?page=<%= pages %><%if(search){%>&search=<%=search%><%}%>">Last</a></li>
        <% } %>
    </ul>
    <% } %>
</div><!-- row-->
</div> <!--container-->
<% include partials/footer %>